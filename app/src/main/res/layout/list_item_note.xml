<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="clickListener"
            type="com.maxdexter.myrecipe.adapter.NoteListener" />
        <variable
            name="noteItem"
            type="com.maxdexter.myrecipe.model.Recipe" />

    </data>

    <androidx.cardview.widget.CardView
        android:onClick="@{()->clickListener.onClick(noteItem)}"
        app:cardCornerRadius="@dimen/corner_radius_medium"
        app:cardElevation="@dimen/cardview_shadow_medium"
        android:layout_margin="@dimen/min_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_recipe_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="top"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_mono"
                android:gravity="center_horizontal"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="@dimen/title_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_recipe_image"
                app:textTitle="@{noteItem}"
                tools:text="My Note" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>