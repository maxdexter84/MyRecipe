<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/noteListFragment">
    <fragment
        android:id="@+id/noteListFragment"
        android:name="com.maxdexter.myrecipe.ui.notelist.NoteListFragment"
        android:label="NoteListFragment" >
        <action
            android:id="@+id/action_noteListFragment_to_viewPagerRecipeFragment2"
            app:destination="@id/viewPagerRecipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.maxdexter.myrecipe.ui.edit_recipe.DetailFragment"
        android:label="detail_fragment"
        tools:layout="@layout/detail_fragment" >
        <argument
            android:name="id"
            app:argType="long"
            android:defaultValue="-1L" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.maxdexter.myrecipe.ui.MainActivity"
        android:label="MainActivity" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.maxdexter.myrecipe.ui.settings.SettingsFragment"
        android:label="SettingsFragment" />
    <dialog
        android:id="@+id/bottomsheetFragment"
        android:name="com.maxdexter.myrecipe.ui.bottomsheet.BottomsheetFragment"
        android:label="BottomsheetFragment" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.maxdexter.myrecipe.ui.search.SearchFragment"
        android:label="SearchFragment" />
    <fragment
        android:id="@+id/viewPagerRecipeFragment"
        android:name="com.maxdexter.myrecipe.ui.recipe_detail.viewpager.ViewPagerRecipeFragment"
        android:label="ViewPagerRecipeFragment" >
        <argument
            android:name="recipeUUID"
            app:argType="string" />
    </fragment>
</navigation>